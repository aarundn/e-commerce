<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecommerce" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColor</item>

        <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true
        </item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item>  <!-- For making Navigation bar content color dark -->
    </style>

    <style name="Theme.Ecommerce" parent="Base.Theme.Ecommerce" />

    <style name="MainActivityTheme" parent="Base.Theme.Ecommerce">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="LargeTileStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="SmallTileStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="MediumPrimaryTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:layout_height">57dp</item>
    </style>

    <style name="SocialButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BottomNavTextAppearance" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/poppins_regular</item> <!-- Use your custom font here -->
        <item name="android:textSize">12sp</item> <!-- Customize text size -->
        <item name="android:textColor">@drawable/bottom_selector
        </item> <!-- Customize text color if needed -->
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemTextAppearance">@style/BottomNavTextAppearance</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="selectedLabBottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SaleTimerItemTextStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:padding">8dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/timer_background</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/neutral_grey</item>
        <item name="colorControlActivated">@color/primary_yellow</item>
    </style>
</resources>